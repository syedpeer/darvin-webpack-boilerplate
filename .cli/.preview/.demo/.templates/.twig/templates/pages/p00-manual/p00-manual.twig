{% extends "@layouts/l00-default/l00-default.twig" %}

{% import "@modules/m01-header/m01-header.twig" as headerModule %}
{% import "@modules/m02-footer/m02-footer.twig" as footerModule %}
{% import "@modules/m03-background/m03-background.twig" as bgModule %}

{% import "@modules/m04-manual/m04-manual.twig" as manualModule %}
{% import "@modules/m04-manual/m04-manual.preview.1.twig" as manualModulePreview1 %}
{% import "@modules/m04-manual/m04-manual.preview.2.twig" as manualModulePreview2 %}
