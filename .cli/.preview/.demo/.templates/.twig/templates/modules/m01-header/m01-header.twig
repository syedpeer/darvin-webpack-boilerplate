{% import _self as self %}

{% macro main(title = 'Darvin Boilerplate') %}
  <!-- START - m01-header -->
    <div class="m-header header">
      <div class="l-constrainer">
        <ul class="header__nav">
          {{ self.navitem(title = 'Install', id = 'install', href = '#install') }}
          {{ self.navitem(title = 'Startup', id = 'startup', href = '#startup') }}
          {{ self.navitem(title = 'Publish', id = 'publish', href = '#publish') }}
          {{ self.navitem(title = 'Loaders', id = 'loaders', href = '#loaders') }}
          {{ self.navitem(title = 'Settings', id = 'settings', href = '#settings') }}
          {{ self.navitem(title = 'CLI', id = 'cli', href = '#cli') }}
          {{ self.navitem(title = 'Develop', id = 'develop', href = '#develop') }}
        </ul>
      </div>
    </div>
  <!-- END - m02-header -->
