      {
        dataSrcset: '
          /assets/images/300.png 200w,
          /assets/images/400.png 400w,
          /assets/images/600.png 600w,
          /assets/images/800.png 800w,
          /assets/images/1200.png 1200w,
          /assets/images/1600.png 1600w,
          /assets/images/2000.png 2000w
        ',
        type: 'image/png',
        media: false,
        sizes: '100vw'
      }
