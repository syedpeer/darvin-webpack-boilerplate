{
  "name": "darvin-boilerplate",
  "version": "1.0.0",
  "description": "webpack boilerplate for static templating with Nunjucks or Twig. providing lazy-loading javascript chunks, frontend preview and easy extendable webpack settings.",
  "email": "mail@tobiasfrei.ch",
  "author": "Tobias Frei",
  "license": "MIT",
  "homepage": "http://unic.com",
  "keywords": [
    "webpack",
    "boilerplate",
    "no gulp",
    "sass",
    "sprites",
    "webfont",
    "grid",
    "favicons",
    "lazy loading js",
    "ES201X",
    "csscomb",
    "githooks",
    "typescript",
    "cli"
  ],
  "scripts": {
    "start": "npm install; npm link; darvin-cli init",
    "lint": "lint-staged",
    "lint-script": "eslint \"src/**/*.js\" --fix",
    "lint-style": "stylelint \"src/**/*.scss\" --fix",
    "pre-commit": "csscomb; lint-staged"
  },
  "bin": {
    "darvin-cli": "./.cli/darvin-cli"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/runtime": "^7.6.0",
    "assert": "^1.5.0",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-eval": "^6.22.0",
    "bourbon": "^5.1.0",
    "chalk": "^2.4.2",
    "core-js": "^3.2.1",
    "cross-env": "^5.2.1",
    "csscomb": "4.3.0",
    "deepmerge": "^4.0.0",
    "end-of-stream": "^1.4.1",
    "eslint": "6.3.0",
    "eslint-import-resolver-webpack": "0.11.1",
    "eslint-plugin-import": "2.18.2",
    "fibers": "^4.0.1",
    "fs-extra": "^8.1.0",
    "glob": "7.1.4",
    "graceful-fs": "^4.2.2",
    "husky": "3.0.5",
    "inquirer": "^7.0.0",
    "intersection-observer": "^0.7.0",
    "lint-staged": "9.2.5",
    "lowdb": "^1.0.0",
    "markdown-loader": "^5.1.0",
    "mdn-polyfills": "^5.18.0",
    "mkdirp": "^0.5.1",
    "noop2": "^2.0.0",
    "normalize.css": "^8.0.1",
    "pump": "^3.0.0",
    "readdirp": "^2.2.1",
    "replace-in-file": "^4.1.3",
    "run-parallel": "^1.1.9",
    "speed-measure-webpack-plugin": "^1.3.1",
    "split2": "^3.1.1",
    "stylelint": "^10.1.0",
    "terminal-table": "0.0.12",
    "through2": "^3.0.1",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.8",
    "webpack-merge": "^4.2.2",
    "webpack-messages": "^2.0.4",
    "webpack-shell-plugin-next": "^0.6.4",
    "whatwg-fetch": "^3.0.0"
  },
  "engines": {
    "node": "12.6.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix \"{,**,**/**}*.js\""
    ],
    "*.scss": [
      "stylelint --fix \"{,**,**/**}*.scss\""
    ]
  },
  "repository": {
    "type": "git",
    "url": "github.com/unic"
  },
  "browserslist": [
    "last 2 versions",
    "ie > 10",
    "iOS > 9"
  ]
}
